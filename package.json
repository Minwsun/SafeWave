{
  "name": "safewave",
  "version": "0.1.0",
  "description": "SafeWave desktop hazard intelligence console",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "npm run dev --prefix renderer",
    "dev:electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron electron/main.js",
    "build": "npm run build:renderer",
    "build:renderer": "npm install --prefix renderer && npm run build --prefix renderer",
    "package": "npm run build:renderer && electron-builder",
    "dist": "npm run build:renderer && electron-builder",
    "start": "cross-env NODE_ENV=production electron electron/main.js",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "maplibre",
    "safewave"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.6",
    "lucide-react": "^0.554.0",
    "maplibre-gl": "^5.13.0"
  },
  "build": {
    "appId": "com.safewave.desktop",
    "files": [
      "electron/**/*",
      "database/**/*",
      "data/**/*",
      "renderer/dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "database",
        "to": "database"
      },
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
